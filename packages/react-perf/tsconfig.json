{
    "extends": "@solar-icons/tsconfig/react.json",
    "compilerOptions": {
        "noUnusedLocals": false,
        "module": "ESNext",
        "declarationMap": true,
        "allowJs": false,
        "checkJs": false,
        "incremental": true,
        "isolatedDeclarations": true,
        "moduleResolution": "Bundler",
        "rootDir": ".",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/**/*",
        "vite.config.ts",
        "./scripts/**/*",
        "tsdown.config.ts",
        "./tests/**/*"
    ],
    "exclude": ["dist", "build", "node_modules", ".vscode", ".turbo"]
}
