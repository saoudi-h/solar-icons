{
    "name": "@solar-icons/react-perf",
    "version": "2.1.0-beta.1",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "description": "Solar Icons for React with performance in mind",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/saoudi-h/solar-icons.git",
        "directory": "packages/react-perf"
    },
    "type": "module",
    "sideEffects": false,
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "LICENSE-THIRD-PARTY"
    ],
    "scripts": {
        "build": "pnpm generate:assets && pnpm copy:licenses && tsdown -l error && pnpm build:types",
        "build:types": "tsc --build --force tsconfig.build.json",
        "copy:licenses": "cp ../../LICENSE ./LICENSE && cp ../../LICENSE-THIRD-PARTY ./LICENSE-THIRD-PARTY",
        "generate:assets": "tsx scripts/generate-assets.ts",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --write",
        "clean": "rimraf *.tsbuildinfo node_modules build dist",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged"
    },
    "module": "./dist/index.mjs",
    "main": "./dist/index.mjs",
    "types": "./dist/types/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.mjs"
        },
        "./lib/*": {
            "types": "./dist/types/lib/*.d.ts",
            "import": "./dist/lib/*.mjs"
        },
        "./category": {
            "types": "./dist/types/icons/index.d.ts",
            "import": "./dist/icons/index.mjs"
        },
        "./category/*": {
            "types": "./dist/types/icons/*.d.ts",
            "import": "./dist/icons/*.mjs"
        },
        "./*": {
            "types": "./dist/types/icons/style/*.d.ts",
            "import": "./dist/icons/style/*.mjs"
        }
    },
    "devDependencies": {
        "@solar-icons/core": "workspace:*",
        "@solar-icons/eslint": "workspace:*",
        "@solar-icons/prettier": "workspace:*",
        "@solar-icons/tsconfig": "workspace:*",
        "@types/node": "^25.2.1",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.3",
        "dotenv": "^17.2.4",
        "picocolors": "^1.1.1",
        "prettier": "^3.8.1",
        "react": "19.2.4",
        "react-dom": "^19.2.4",
        "rimraf": "^6.1.2",
        "tsdown": "^0.18.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "peerDependencies": {
        "react": ">= 16.8",
        "react-dom": ">= 16.8"
    },
    "engines": {
        "node": ">=16"
    },
    "keywords": [
        "react",
        "icons",
        "svg",
        "solar",
        "design",
        "interface",
        "phosphor",
        "UI",
        "UX"
    ],
    "author": {
        "name": "Saoudi Hakim",
        "url": "https://hakimsaoudi.dev",
        "email": "saoudihakim@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/saoudi-h/solar-icons/issues"
    }
}
