{
    "extends": "@solar-icons/tsconfig/vue.json",
    "compilerOptions": {
        "noUnusedLocals": false,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "rootDir": ".",
        "baseUrl": "src",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["node", "vite/client"],
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/lib",
        "./src/*.ts",
        "./src/*.d.ts",
        "./src/*.vue",
        "tsdown.config.ts",
        "tsdown.nuxt.config.ts",
        "./scripts/**/*.ts",
        "vitest.config.ts",
        "lint-staged.config.mjs",
        "env.d.ts"
    ],
    "exclude": ["dist", "build", "node_modules", ".vscode", ".turbo", "src/icons/**/*.ts"]
}
