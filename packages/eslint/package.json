{
    "name": "@solar-icons/eslint",
    "version": "1.0.0",
    "private": true,
    "description": "A package to share ESLint configurations in workspace",
    "license": "MIT",
    "main": "./src/index.ts",
    "scripts": {
        "clean": "rm -rf *.tsbuildinfo node_modules .turbo",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@next/eslint-plugin-next": "^16.1.6",
        "@solar-icons/prettier": "workspace:*",
        "@solar-icons/tsconfig": "workspace:*",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/eslint-plugin-jsx-a11y": "^6.10.1",
        "@types/node": "^25.2.1",
        "@typescript-eslint/utils": "^8.54.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-playwright": "^2.5.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-regexp": "^3.0.0",
        "eslint-plugin-storybook": "^10.2.7",
        "eslint-plugin-tailwindcss": "^3.18.2",
        "eslint-plugin-turbo": "^2.8.3",
        "globals": "^17.3.0",
        "tailwindcss": "^4.1.18",
        "typescript-eslint": "^8.54.0"
    },
    "dependencies": {
        "@eslint/config-helpers": "^0.5.2",
        "eslint": "^9.39.2",
        "eslint-plugin-better-tailwindcss": "^3.8.0"
    }
}
