{
    "name": "@solar-icons/eslint",
    "version": "1.0.0",
    "private": true,
    "description": "A package to share ESLint configurations in workspace",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "default": "./src/index.js",
            "types": "./src/index.d.ts"
        }
    },
    "scripts": {
        "clean": "rm -rf *.tsbuildinfo node_modules .turbo",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.39.1",
        "@next/eslint-plugin-next": "^16.0.3",
        "@solar-icons/prettier": "workspace:*",
        "@solar-icons/tsconfig": "workspace:*",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^24.10.1",
        "@typescript-eslint/utils": "^8.47.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-playwright": "^2.3.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-regexp": "^2.10.0",
        "eslint-plugin-storybook": "^10.0.8",
        "eslint-plugin-tailwindcss": "^3.18.2",
        "eslint-plugin-turbo": "^2.6.1",
        "globals": "^16.5.0",
        "tailwindcss": "^4.1.17",
        "typescript-eslint": "^8.47.0"
    },
    "dependencies": {
        "eslint-plugin-better-tailwindcss": "^3.6.3"
    }
}
