{
    "name": "@solar-icons/eslint",
    "version": "1.0.0",
    "private": true,
    "description": "A package to share ESLint configurations in workspace",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "default": "./src/index.js",
            "types": "./src/index.d.ts"
        }
    },
    "scripts": {
        "clean": "rm -rf *.tsbuildinfo node_modules .turbo",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier \"**/*\" --ignore-unknown --list-different",
        "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.31.0",
        "@next/eslint-plugin-next": "^15.4.2",
        "@solar-icons/prettier": "workspace:*",
        "@solar-icons/tsconfig": "workspace:*",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/node": "^24.0.15",
        "@typescript-eslint/utils": "^8.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.9.0",
        "eslint-plugin-playwright": "^2.2.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-regexp": "^2.9.0",
        "eslint-plugin-storybook": "^9.0.17",
        "eslint-plugin-tailwindcss": "^3.18.2",
        "eslint-plugin-turbo": "^2.5.5",
        "globals": "^16.3.0",
        "tailwindcss": "^4.1.11",
        "typescript-eslint": "^8.37.0"
    },
    "dependencies": {
        "eslint-plugin-better-tailwindcss": "^3.6.3"
    }
}
